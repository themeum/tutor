{
  "compilerOptions": {
    "target": "es5",
    "downlevelIteration": true,
    "lib": ["dom", "dom.iterable", "esnext", "es5", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "baseUrl": ".",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types/", "./assets/src/js/@types"],
    "paths": {
      "@Core/*": ["assets/core/*"],
      "@TutorShared/*": ["assets/src/js/v3/shared/*"],
      "@SharedImages/*": ["assets/src/js/v3/public/images/*"],
      "@CourseBuilderComponents/*": ["assets/src/js/v3/entries/course-builder/components/*"],
      "@CourseBuilderServices/*": ["assets/src/js/v3/entries/course-builder/services/*"],
      "@CourseBuilderConfig/*": ["assets/src/js/v3/entries/course-builder/config/*"],
      "@CourseBuilderPages/*": ["assets/src/js/v3/entries/course-builder/pages/*"],
      "@CourseBuilderUtils/*": ["assets/src/js/v3/entries/course-builder/utils/*"],
      "@CourseBuilderPublic/*": ["assets/src/js/v3/entries/course-builder/public/*"],
      "@CourseBuilderContexts/*": ["assets/src/js/v3/entries/course-builder/contexts/*"],
      "@OrderDetails/*": ["assets/src/js/v3/entries/order-details/*"],
      "@CouponDetails/*": ["assets/src/js/v3/entries/coupon-details/*"],
      "@AddonList/*": ["assets/src/js/v3/entries/addon-list/*"],
      "@ImportExport/*": ["assets/src/js/v3/entries/import-export/*"],
      "@FrontendTypes/*": ["assets/src/js/frontend/types/*"],
      "@FrontendServices/*": ["assets/src/js/frontend/services/*"],
      "@FrontendDashboard/*": ["assets/src/js/frontend/dashboard/*"],
      "@LearningArea/*": ["assets/src/js/frontend/learning-area/*"],
    }
  },
  "include": [
    "./assets/src/js/v3",
    "./stories/**/*.{ts,tsx}",
    "./stories/**/*.stories.tsx",
    "./.storybook/**/*.tsx",
    "**/*.ts"
  ],
  "exclude": ["node_modules"]
}
